
<p id="notice"><%= notice %></p>
  <hr><br>
  
  
 
  

  <div class = "list">
  
  <div class = "Title">
    Travels's reviews
  </div>
  <%=form_tag posts_path, :method => 'get' do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search" %>
  <%end %>
  
<%= link_to "Advanced Search", new_search_path %>
  <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Author</th>
          <th>Location</th>
          <th>Estimated price</th>
          <th> Counter Like</th>
          <th colspan="3">Option</th>
        </tr>
      </thead>
    
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= link_to post.title , post %></td>
            <td><%= post.writer %></td>
            <td><%= post.location %></td>
            <td><%= post.estimated_price %></td>
            <td> <strong><%= post.total_like %> Likes</strong></td>
            <td><%= link_to 'Show', post %></td>
            <% if current_user.email == post.writer %>
            <td><%= link_to 'Edit', edit_post_path(post) %></td>
            <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <br>
    
    <%= link_to 'New Review', new_post_path %>
  </div>

